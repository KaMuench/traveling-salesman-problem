<Window x:Class="TSP.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TSP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Run" HorizontalAlignment="Center" VerticalAlignment="Center" Command="{Binding StartButtonCommand}" Padding="5" Width="60"/>
        <TextBlock Name="statusText" HorizontalAlignment="Center" Margin="0,64,0,0" TextWrapping="Wrap" Text="{Binding CentralText}" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
